extends ../layouts/common

block content

    h2 List of my books

    a.btn.btn-success(href="/books/add") Add new book

    table.table
        thead.thead-light
            tr
                th Name
                th Author
                th Type
                //- th Image
                th Link
                th Actions
        tbody
        each book in books
            tr
                td= book.name
                td= book.author
                td= book.type
                td= book.link
                td
                    a.btn.btn-info(href="/books/" + book.id) View